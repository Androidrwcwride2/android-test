load("//build_extensions/maven:axt_android_aar.bzl", "axt_android_aar")
load("//build_extensions/maven:maven_artifact.bzl", "maven_artifact")
load("//build_extensions:axt_versions.bzl", "ANDROIDX_TRUTH_ARTIFACT")

# Description: Build rules for building androidx.test.truth from source
licenses(["notice"])

package(
    default_visibility = [
        "//visibility:public",
    ],
)

android_library(
    name = "truth",
    testonly = 1,
    srcs = glob(
        ["**/*.java"],
    ),
    manifest = "AndroidManifest.xml",
    tags = [
        "maven_coordinates=%s" % ANDROIDX_TRUTH_ARTIFACT,
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//:androidx_annotation",
        "//annotation",
        "//core",
        "@maven//:com_google_guava_guava",
        "@maven//:com_google_truth_truth",
    ],
)

# Generate rules for the release artifacts.
axt_android_aar(
    name = "truth_release",
    testonly = 1,
    included_dep = ":truth",
)

maven_artifact(
    name = "truth_maven_artifact",
    testonly = 1,
    last_updated = "20180321000000",
    target = ":truth_release",
)
