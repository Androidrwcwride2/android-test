# Description: Build rules for building androidx.test.truth from source
load("//build_extensions:maven_artifact.bzl", "maven_artifact")
load("//build_extensions:axt_versions.bzl", "ANDROIDX_JUNIT_ARTIFACT")
load("//build_extensions:axt_android_aar.bzl", "axt_android_aar")

licenses(["notice"])

package(
    default_visibility = [
        "//visibility:public",
    ],
)

android_library(
    name = "junit",
    testonly = 1,
    srcs = glob(
        ["**/*.java"],
    ),
    manifest = "AndroidManifest.xml",
    tags = [
        "alt_dep=//ext/junit",
        "maven_coordinates=%s" % ANDROIDX_JUNIT_ARTIFACT,
    ],
    deps = [
        "//:androidx_annotation",
        "//core",
        "//runner/monitor",
        "@maven//:junit_junit",
    ],
)

# Generate rules for the release artifacts.
axt_android_aar(
    name = "junit_release",
    testonly = 1,
    included_dep =
        ":junit",
)

maven_artifact(
    name = "junit_maven_artifact",
    testonly = 1,
    last_updated = "20180723000000",
    target = ":junit_release",
)
