# androidx.ext.junit Kotlin extensions

load("@io_bazel_rules_kotlin//kotlin:android.bzl", "kt_android_library")
load("//build_extensions/maven:maven_artifact.bzl", "maven_artifact")
load("//build_extensions/maven:axt_android_aar.bzl", "axt_android_aar")

licenses(["notice"])

package(
    default_visibility = [
        "//:__subpackages__",
    ],
)

kt_android_library(
    name = "junit",
    testonly = 1,
    srcs = glob(
        ["**/*.kt"],
    ),
    deps = [
        "//:androidx_lifecycle_common",
        "//ext/junit",
    ],
)

# kt_android)library doesn't produce an aar, so wrap inside a android_library
android_library(
    name = "release_lib",
    testonly = 1,
    custom_package = "androidx.test.ext.junit.ktx",
    manifest = "AndroidManifest.xml",
    visibility = ["//visibility:private"],
    exports = [
        ":junit",
    ],
)

# Generate rules for the release artifacts.
axt_android_aar(
    name = "junit_release",
    testonly = 1,
    included_dep = ":release_lib",
)

maven_artifact(
    name = "junit_maven_artifact",
    testonly = 1,
    last_updated = "20181029000000",
    target = ":junit_release",
)
