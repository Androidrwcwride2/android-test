# androidx.test.core Kotlin extensions

load("@io_bazel_rules_kotlin//kotlin:android.bzl", "kt_android_library")
load("//build_extensions/maven:maven_artifact.bzl", "maven_artifact")
load("//build_extensions/maven:axt_android_aar.bzl", "axt_android_aar")

package(
    default_visibility = [
        "//:__subpackages__",
    ],
)

licenses(["notice"])

kt_android_library(
    name = "core",
    testonly = 1,
    srcs = glob(
        ["**/*.kt"],
    ),
    custom_package = "androidx.test.core.ktx",
    manifest = "AndroidManifest.xml",
    deps = [
        "//:androidx_lifecycle_common",
        "//core",
    ],
)

# Generate rules for the release artifacts.

# kt_android)library doesn't produce an aar, so wrap inside a android_library
android_library(
    name = "release_lib",
    testonly = 1,
    custom_package = "androidx.test.core.ktx",
    manifest = "AndroidManifest.xml",
    visibility = ["//visibility:private"],
    exports = [
        ":core",
    ],
)

axt_android_aar(
    name = "core_release",
    testonly = 1,
    included_dep = ":release_lib",
)

maven_artifact(
    name = "core_maven_artifact",
    testonly = 1,
    last_updated = "20181029000000",
    target = ":core_release",
)
