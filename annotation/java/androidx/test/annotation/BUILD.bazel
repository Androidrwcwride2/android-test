# Description: Build rules for building androidx.test.annotation from source

load("//build_extensions:axt_android_aar.bzl", "axt_android_aar")
load("//build_extensions:maven_artifact.bzl", "maven_artifact")
load("//build_extensions:axt_versions.bzl", "ANNOTATION_ARTIFACT")

package(
    default_visibility = ["//:__subpackages__"],
)

android_library(
    name = "annotation",
    srcs = glob(
        ["**/*.java"],
        exclude = ["Stub.java"],
    ),
    manifest = "AndroidManifest.xml",
    tags = [
        "alt_dep=//annotation",
        "maven_coordinates=%s" % ANNOTATION_ARTIFACT,
    ],
    deps = [
        "//:androidx_annotation",
        "//:androidx_annotation_experimental",
    ],
)

axt_android_aar(
    name = "annotation_release",
    included_dep = ":annotation",
)

maven_artifact(
    name = "annotation_maven_artifact",
    last_updated = "20210901000000",
    target = ":annotation_release",
)
