load("//build_extensions/maven:axt_android_aar.bzl", "axt_android_aar")
load("//build_extensions/maven:maven_artifact.bzl", "maven_artifact")

# Description: Build rules for building androidx.test from source
licenses(["notice"])

package(
    default_visibility = [
        "//visibility:public",
    ],
)

# test rules
android_library(
    name = "rules",
    srcs = glob(["**/*.java"]),
    custom_package = "androidx.test.rules",
    manifest = "AndroidManifest.xml",
    proguard_specs = [
        "proguard.cfg",
    ],
    deps = [
        "//:androidx_annotation",
        "//annotation",
        "//runner/android_junit_runner",
        "@androidsdk//:legacy_test-30",
        "@maven//:junit_junit",
    ],
)

# Generate rules for the release artifacts. T
axt_android_aar(
    name = "rules_release",
    expected_class_prefixes = [
        "androidx.test.annotation.UiThreadTest",
        "androidx.test.internal.statement",
        "androidx.test.rule",
    ],
    included_dep = ":rules",
)

maven_artifact(
    name = "rules_maven_artifact",
    last_updated = "20170622000000",
    target = ":rules_release",
)
