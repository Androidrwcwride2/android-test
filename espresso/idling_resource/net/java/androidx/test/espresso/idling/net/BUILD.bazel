# Description:
# Network Idling Resources
load("//build_extensions:axt_android_aar.bzl", "axt_android_aar")
load("//build_extensions:maven_artifact.bzl", "maven_artifact")
load("//build_extensions:axt_versions.bzl", "ESPRESSO_IDLING_NET_ARTIFACT")
load("//build_extensions:combine_jars.bzl", "combine_jars")

licenses(["notice"])

package(
    default_visibility = ["//:__subpackages__"],
)

android_library(
    name = "uri_idling_resource",
    srcs = ["UriIdlingResource.java"],
    manifest = "AndroidManifest.xml",
    tags = [
        "maven_coordinates=%s" % ESPRESSO_IDLING_NET_ARTIFACT,
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//:androidx_annotation",
        "//espresso/idling_resource/java/androidx/test/espresso:idling_resource_internal",
    ],
)

# rule for outputting externally released binary. Produces
# idling_net_release_no_deps.jar and idling_net_release.aar
axt_android_aar(
    name = "idling_net_release",
    included_dep = ":uri_idling_resource",
)

maven_artifact(
    name = "idling_net_maven_artifact",
    last_updated = "20170622000000",
    target = ":idling_net_release",
)
