# This package loads and stores test output artifact metadata for easier debugging of Espresso tests
load("@io_bazel_rules_kotlin//kotlin:android.bzl", "kt_android_library")
load("//build_extensions:axt_versions.bzl", "ESPRESSO_CORE_ARTIFACT")

licenses(["notice"])

package(default_visibility = ["//espresso/core/java/androidx/test/espresso:espresso_pkg"])

kt_android_library(
    name = "model",
    srcs = [
        "ActionData.kt",
        "ScreenData.kt",
        "TestArtifact.kt",
        "TestFlow.kt",
        "ViewData.kt",
    ],
                tags = [
                    "maven_coordinates=%s" % ESPRESSO_CORE_ARTIFACT,
                ],
    deps = [
        "//espresso/core/java/androidx/test/espresso:framework",
    ],
)
