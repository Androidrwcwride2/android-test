# Description:
# JUnit4 Rules for Intents

load("@io_bazel_rules_kotlin//kotlin:android.bzl", "kt_android_library")
load("//build_extensions:axt_versions.bzl", "ESPRESSO_INTENTS_ARTIFACT")

licenses(["notice"])

package(default_visibility = ["//visibility:public"])

kt_android_library(
    name = "rule",
    testonly = 1,
    srcs = glob(
        [
            "*.java",
            "*.kt",
        ],
    ),
    tags = [
        "maven_coordinates=%s" % ESPRESSO_INTENTS_ARTIFACT,
    ],
    deps = [
        "//espresso/intents/java/androidx/test/espresso/intent:intents",
        "//runner/rules",
        "@maven//:junit_junit",
    ],
)
