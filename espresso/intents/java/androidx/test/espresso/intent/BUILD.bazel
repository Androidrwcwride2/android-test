# Description:
#   Common library for testing inter and intra app communication via intents.

load("//build_extensions/maven:axt_android_aar.bzl", "axt_android_aar")
load("//build_extensions/maven:maven_artifact.bzl", "maven_artifact")
load("//build_extensions:axt_versions.bzl", "ESPRESSO_INTENTS_ARTIFACT")

licenses(["notice"])

package(
    default_visibility = ["//:__subpackages__"],
)

android_library(
    name = "intents",
    testonly = 1,
    srcs = glob(
        ["*.java"],
        exclude = [
            "ResolvedIntent.java",
            "Checks.java",
        ],
    ),
    tags = [
        "maven_coordinates=%s" % ESPRESSO_INTENTS_ARTIFACT,
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":precondition_checks",
        ":resolved_intent_interface",
        "//:androidx_annotation",
        "//annotation",
        "//espresso/core/java/androidx/test/espresso",
        "//espresso/core/java/androidx/test/espresso:framework",
        "//espresso/core/java/androidx/test/espresso:interface",
        "//espresso/core/java/androidx/test/espresso/matcher",
        "//espresso/intents/java/androidx/test/espresso/intent/matcher",
        "//runner/android_junit_runner",
        "@maven//:com_google_errorprone_error_prone_annotations",
        "@maven//:junit_junit",
        "@maven//:org_hamcrest_hamcrest_core",
    ],
)

android_library(
    name = "precondition_checks",
    srcs = [
        "Checks.java",
    ],
    tags = [
        "maven_coordinates=%s" % ESPRESSO_INTENTS_ARTIFACT,
    ],
)

android_library(
    name = "resolved_intent_interface",
    srcs = ["ResolvedIntent.java"],
    tags = [
        "maven_coordinates=%s" % ESPRESSO_INTENTS_ARTIFACT,
    ],
)

# ** Generate the release artifacts **
android_library(
    name = "espresso_intents_release_lib",
    testonly = 1,
    manifest = "AndroidManifest.xml",
    tags = [
        "maven_coordinates=%s" % ESPRESSO_INTENTS_ARTIFACT,
    ],
    exports = [
        ":intents",
        "//espresso/intents/java/androidx/test/espresso/intent/rule",
    ],
)

axt_android_aar(
    name = "espresso_intents_release",
    testonly = 1,
    included_dep = ":espresso_intents_release_lib",
)

maven_artifact(
    name = "espresso_intents_maven_artifact",
    testonly = 1,
    last_updated = "20170622000000",
    target = ":espresso_intents_release",
)
