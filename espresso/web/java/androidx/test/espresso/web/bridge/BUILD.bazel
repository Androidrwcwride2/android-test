# Description:
#   JavaScript to Java bridging
load("//build_extensions:axt_versions.bzl", "ESPRESSO_WEB_ARTIFACT")

package_group(
    name = "internal",
    packages = [
        "//espresso/web/java/androidx/test/espresso/web/...",
    ],
)

android_library(
    name = "bridge",
    srcs = glob(
        ["*java"],
    ),
    exports_manifest = 1,
    manifest = "AndroidManifest.xml",
    tags = [
        "maven_coordinates=%s" % ESPRESSO_WEB_ARTIFACT,
    ],
    visibility = [":internal"],
    deps = [
        "//runner/android_junit_runner",
        "@maven//:androidx_annotation_annotation",
        "@maven//:androidx_concurrent_concurrent_futures",
        "@maven//:com_google_errorprone_error_prone_annotations",
        "@maven_listenablefuture//:com_google_guava_listenablefuture",
    ],
)
