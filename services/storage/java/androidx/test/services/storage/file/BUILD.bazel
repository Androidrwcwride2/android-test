load("@build_bazel_rules_android//android:rules.bzl", "android_library")
load("//build_extensions:axt_versions.bzl", "SERVICES_STORAGE_ARTIFACT")

package(
    default_visibility = ["//services/storage:__subpackages__"],
    features = ["-android_resources_strict_deps"],
)

licenses(["notice"])

# Used by TestStorage to build URIs to the test file content providers.
android_library(
    name = "file",
    srcs = glob(["*.java"]),
    tags = [
        "maven_coordinates=%s" % SERVICES_STORAGE_ARTIFACT,
    ],
    deps = [
        "//annotation",
        "//runner/monitor",
        "//services/storage/java/androidx/test/services/storage:test_storage_constants",
    ],
)
